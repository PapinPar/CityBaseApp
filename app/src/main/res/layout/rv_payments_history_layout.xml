<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">


    <LinearLayout
        android:id="@+id/linearHistory1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Оплата Тарифа ознакомительный"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tarif_name_tv"
            android:textSize="@dimen/textSize"
            android:textColor="@color/textColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/linearHistory1"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/linearHistory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:text="2016-15-12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_history_tv"
                android:layout_weight="1"/>

            <TextView
                android:text="10:14:11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_history_tv"
                android:layout_weight="1"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHistory3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:text="-1 грн"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amount_history_tv"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHistory4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Статус"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"/>

            <TextView
                android:text="Оплаченно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_history_tv"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
