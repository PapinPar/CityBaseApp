<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/imageInfoNew"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageHight"
            android:background="@color/backGray"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/loaderImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageHight"
            android:background="@color/backGray"
            android:scaleType="center"
            android:src="@drawable/progress_animation" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/searchTextHeight"
            android:layout_alignBottom="@+id/imageInfoNew"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:alpha="0.7"
                android:background="@color/backWhite" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/roomsTypeTW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1room"
                    android:textColor="@color/hintColor"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:id="@+id/cityNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/roomsTypeTW"
                    android:layout_toStartOf="@+id/imageView2"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/hintColor"
                    android:textSize="@dimen/textSize" />
            </LinearLayout>


            <TextView
                android:id="@+id/detailInfoNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:padding="5dp"
                android:text="Привет как дела? Привет как дела? Привет как дела? Привет как дела? Привет как дела? Привет как дела?Привет как дела? Привет как дела? Привет как дела?Привет как дела?  "
                android:textColor="@color/hintColor"
                android:textSize="@dimen/textSize"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/frameLayout4"
                android:layout_width="@dimen/detailWidthSize"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/priceNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="price"
                    android:textColor="@color/hintColor"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:id="@+id/siteNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="www.s.com"
                    android:textColor="@color/hintColor"
                    android:textSize="@dimen/textSize"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2sp"
                android:layout_toLeftOf="@+id/frameLayout4"
                android:layout_toStartOf="@+id/frameLayout4"
                android:background="@color/black"
                android:elevation="01dp"
                android:src="@color/hintColor" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
