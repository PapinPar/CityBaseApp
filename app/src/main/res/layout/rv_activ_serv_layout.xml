<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/serv_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:gravity="center"
        android:text="Аренда + Продажа 1 месяц"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"/>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/serv_name_tv"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/date_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/date_from_tv"
            android:paddingTop="10dp"
            android:text="Действует до:"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/date_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:text="Действует с:"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/time_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_to_tv"
            android:layout_alignTop="@+id/date_to_tv"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/date_to_tv"
            android:layout_toRightOf="@+id/date_to_tv"
            android:text="24.12 19:13"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/time_from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time_to_tv"
            android:layout_alignBaseline="@+id/date_from_tv"
            android:layout_alignLeft="@+id/time_to_tv"
            android:layout_alignStart="@+id/time_to_tv"
            android:text="24.11 19:13"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="2dp"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/black">
    </View>

</RelativeLayout>
